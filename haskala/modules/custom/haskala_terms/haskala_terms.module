<?php
/**
 * @file
 * Code for the Haskala Terms feature.
 */

include_once 'haskala_terms.features.inc';

/**
 * Implements hook_ctools_plugin_directory().
 */
function haskala_terms_ctools_plugin_directory($module, $plugin) {
  if ($module == 'ctools') {
    return 'plugins/' . $plugin;
  }
}

function haskala_terms_menu_alter(&$items) {
  $items['taxonomy/term/%taxonomy_term']['page callback'] = 'haskala_terms_taxonomy_page_callback';
}

function haskala_terms_taxonomy_page_callback($term) {
  drupal_goto('term/' . $term->tid);
}
