<?php
/**
 * @file
 * Demonstration of a test within a profile module.
 */

/**
 * Tests for the get info functionality.
 */
class HaskalaMigrateTest extends DrupalWebTestCase {
  /**
   * Get the test info.
   *
   * @return array
   *   The test information.
   */
  public static function getInfo() {
    return array(
      'name' => 'Haskala - Migrate',
      'description' => 'Test the Haskala Migrate module.',
      'group' => 'haskala:migrate',
    );
  }

  /**
   * Setup the test environment.
   */
  public function setUp() {
    $modules = array('haskala_migrate');
    parent::setUp($modules);
  }

  /**
   * Test the get info functionality.
   */
  public function testHelloWorld() {
    $expected = 'Hello world!';
    $result = haskala_migrate_hello_world();

    $this->assertEqual($expected, $result);
  }
}
