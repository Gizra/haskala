<?php
/**
 * @file
 * Demonstration of a test within a profile module.
 */

/**
 * Tests for the get info functionality.
 */
class HaskalaDemoTest extends DrupalWebTestCase {
  /**
   * Get the test info.
   *
   * @return array
   *   The test information.
   */
  public static function getInfo() {
    return array(
      'name' => 'Haskala - Demo',
      'description' => 'Test the Haskala Demo module.',
      'group' => 'haskala:demo',
    );
  }

  /**
   * Setup the test environment.
   */
  public function setUp() {
    $modules = array('haskala_demo');
    parent::setUp($modules);
  }

  /**
   * Test the get info functionality.
   */
  public function testHelloWorld() {
    $expected = 'Hello world!';
    $result = haskala_demo_hello_world();

    $this->assertEqual($expected, $result);
  }
}
